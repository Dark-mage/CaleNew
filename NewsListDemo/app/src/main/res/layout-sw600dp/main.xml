<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wu.newslistdemo.MainActivity">
    <fragment
        android:id="@+id/news_title_frag"
        android:name="com.wu.newslistdemo.NewsTitleFragment"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/news_content_frag"
            android:name="com.wu.newslistdemo.NewsContentFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
